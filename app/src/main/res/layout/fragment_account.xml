<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.mainActivityFragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="settings"
            android:textAllCaps="true"
            android:textColor="#5a5a5a" />

        <TextView
            android:id="@+id/btnPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_outline_payment_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Payment Settings"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnEmailS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_outline_email_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Email Settings"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="#5a5a5a" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="@string/help_support"
            android:textAllCaps="true"
            android:textColor="#5a5a5a"
            tools:ignore="AllCaps" />

        <TextView
            android:id="@+id/btnHelpS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_help_outline_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Help"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/btnTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_outline_feed_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Terms of Service"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="#5a5a5a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="Your Account"
            android:textAllCaps="true"
            android:textColor="#5a5a5a"
            tools:ignore="AllCaps" />

        <TextView
            android:id="@+id/btnPrivacyS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_database_svgrepo_com"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="@string/privacy_data"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_logout_svgrepo_com"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Log Out"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/btnDeleteAccountS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_person_delete_outline_svgrepo_com"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Delete Account"
            android:textColor="@color/black"
            android:textSize="19dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>